                $("#Tipo").autocomplete({
                    source: function (request, response) {
                        var tamanho = $("#Tamanho").val();
                        $.ajax({
                            url: "Home/ListarTipos?filtro=" + request.term + "&tamanho=" + tamanho,
                            cache: false,
                            success: function (data) {
                                response(data);
                            }
                        });
                    },
